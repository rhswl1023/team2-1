   <!--       스프링 컨테이너가 자동으로 스캔하여 확인하고 관리할 수 있도록 처리 -->
   
   <!--    → 『base-package』 속성에 -->
   <!--       Controller 객체가 포함된 패키지 경로를 지정한다. -->
   <context:component-scan   base-package="com.sys.comeit" />
   
   
